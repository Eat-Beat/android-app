<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarHeader" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CalendarWeek" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarDate" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>