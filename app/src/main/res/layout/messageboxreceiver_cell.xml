<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chatBoxCell_height"
    android:layout_marginBottom="16dp"
    android:background="@drawable/messagebubble_recieved"
    app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.483"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/chatLogRecyclerView"
    app:layout_constraintVertical_bias="1.0">

    <TextView
        android:id="@+id/messageTextRecieved"
        android:layout_width="@dimen/chatTextCell_View_Width"
        android:layout_height="@dimen/chatTextCell_View_Height"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center_vertical"
        android:text="MMMMMMMMMMMMMMMMMMMM"
        android:textColor="@color/white"
        android:textSize="@dimen/chatTextCell_textSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

</androidx.constraintlayout.widget.ConstraintLayout>